{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "lib": ["ES2021", "DOM"],
    "types": ["node"],

    "rootDir": ".",           // ‚Üê include src/ and scripts/
    "outDir": "dist",
    "composite": true
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["dist"],
  "references": [{ "path": "../chat-md-core" }]
}
