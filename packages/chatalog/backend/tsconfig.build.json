{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "types": ["node"],
    "outDir": "dist",
    "rootDir": "..",                     // ⬅️ widen to repo root
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "../shared/src/**/*.ts"
  ]
}
