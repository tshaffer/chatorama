{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "types": [
      "node",
      "webpack-env"
    ],
    "paths": {
      "@shared/*": [
        "../shared/src/*"
      ]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "emitDeclarationOnly": false,
    "declarationMap": false,
    "sourceMap": true
  },
  "include": [
    "src"
  ]
}